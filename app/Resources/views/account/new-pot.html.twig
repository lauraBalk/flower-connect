{% extends 'base.html.twig' %}
{% block intro %}
    <div class="fh5co-left-position">
        <h2 class="animate-box">Welcome to your account</h2>
         <p class="animate-box"><a href="https://vimeo.com/channels/staffpicks/93951774" class="btn btn-outline popup-vimeo btn-video"><i class="icon-play2"></i> Watch video</a> <a href="http://freehtml5.co" target="_blank" class="btn btn-primary">Visit FREEHTML5.co</a></p>
    </div>
{% endblock %}
{% block body %}
        <section id="fh5co-projects">
            <div class="container">
                <div class="row row-bottom-padded-md">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <h2 class="fh5co-lead animate-box">New pot</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xxs-12 animate-box">
                        <form id="search_pot">
                                <div class="form-group row">
                                    <label for="inputCode" class="col-sm-2 col-form-label">Code</label>
                                    <div class="col-sm-10">
                                      <input type="text" class="form-control" id="inputCode" placeholder="Code">
                                      <input type="hidden" class="form-control" id="inputLink" placeholder="Code" value="">
                                    </div>
                                  </div>
                                 <input type="submit" class="col-md- col-sm-12 col-xxs-12 btn btn-primary" id="_submit" name="_submit" value="Search" />
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- END #fh5co-projects -->
{% endblock %}
{% block javascript %}
    <script>
          $(function() {
              $("#search_pot .submit").click(function() {
              var code = $("#inputCode").val();
              var link = $("#inputLink").val();

            if(code=='')
            {
              $('.success').fadeOut(200).hide();
              $('.error').fadeOut(200).show();
            }
            else
            {
              $.ajax({
                type: "POST",
                url: link,
                data: code,
                success: function(){
                 $('.success').fadeIn(200).show();
                 $('.error').fadeOut(200).hide();
                }
              });
            }
            return false;
            });
        });
    </script>
{% endblock %}
